<Window x:Class="CountDownTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountDownTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="AlarmCheckBox" Content="Enable Alarm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="273,389,0,0" Checked="AlarmCheckBox_Checked" Unchecked="AlarmCheckBox_UnChecked" />
        <Label x:Name="CountdownLabel" Content="Countdown: 00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <Button x:Name="Btn_Start" Content="Start" HorizontalAlignment="Left" Margin="414,308,0,0" VerticalAlignment="Top" Height="43" Width="129" Click="Btn_Start_Click"/>
        <TextBox x:Name="CountdownInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Height="43" Margin="261,308,0,0" TextAlignment="Center" />
    </Grid>
</Window>
