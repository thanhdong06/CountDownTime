<Window x:Class="CountDownTime.HPNY"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountDownTime"
        mc:Ignorable="d"
        Title="New Year Greeting" Height="450" Width="800"
        Background="AliceBlue"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Happy New Year!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <Image Grid.Row="1" Source="img/HPNY.png" Margin="10,10,10,11"/>

        <Button Grid.Row="2" Content="Close" Width="100" HorizontalAlignment="Center" Click="Btn_Close_Click"/>
    </Grid>
</Window>
